server {
    listen 8099;


    # your ip-address or domain
    server_name 159.223.20.1;

    location /static/ {
        alias /root/def-example-django/staticfiles/;
        autoindex off;
    }

    location / {
        proxy_pass http://unix:/run/gunicorn-def.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    error_log /var/log/nginx/gunicorn_error.log;
    access_log /var/log/nginx/gunicorn_access.log;
}
